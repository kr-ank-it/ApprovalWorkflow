<mvc:View
    controllerName="phoenix.controller.Orders"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.f.cards"
    xmlns:commons="sap.suite.ui.commons"
    id="Orders"
>
    <Page title="Orders">
        <content>
            <commons:Timeline
                id="ordersTimeline"
                enableDoubleSided="true"
                groupBy="dateSignUp"
                growingThreshold="5"
                content="{NorthwindModel>/Orders}"
            >
                <commons:content>
                    <commons:TimelineItem
                        dateTime="{NorthwindModel>OrderDate}"
                        title="Order ID: {NorthwindModel>OrderID}"
                        select="onPressItems"
                        text="{NorthwindModel>CustomerID}"
                    />
                </commons:content>
            </commons:Timeline>
        </content>
    </Page>
</mvc:View>
