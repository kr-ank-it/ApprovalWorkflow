<mvc:View
    controllerName="phoenix.controller.Root"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.f.cards"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <l:Splitter height="500px">
                <Page title="Explore by">
                    <Panel
                        height="100%"
                        expandable="false"
                        expanded="true"
                        stickyHeader="true"
                        width="auto"
                    >
                        <content>
                            <SelectList
                                itemPress="showContents"
                                items="{
						path: 'oOptionsModel>/'
					}"
                            >
                                <core:Item
                                    key="{oOptionsModel>key}"
                                    text="{oOptionsModel>value}"
                                />
                            </SelectList>
                        </content>
                    </Panel>

                    <layoutData>
                        <l:SplitterLayoutData
                            size="20%"
                            resizable="false"
                        />
                    </layoutData>
                </Page>

                <Page title="Dashboard">
                    <f:Card
                        press="onShowProducts"
                        class="sapUiMediumMargin"
                        width="300px"
                    >
                        <f:header>
                            <card:Header
                                title="Products"
                                iconSrc="sap-icon://factory"
                                press="onShowProducts"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{path:'NorthwindModel>/Products', length: 3}"
                            >
                                <CustomListItem>
                                    <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{path:'NorthwindModel>ProductName'}"
                                            />
                                            <Text
                                                text="${NorthwindModel>UnitPrice}"
                                            />
                                        </VBox>
                                        <ObjectStatus
                                            class="sapUiTinyMargin sapUiSmallMarginEnd"
                                            text="{NorthwindModel>QuantityPerUnit}"
                                        />
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>
                    <f:Card
                        class="sapUiMediumMargin"
                        width="300px"
                    >
                        <f:header>
                            <card:Header
                                title="Categories"
                                iconSrc="sap-icon://factory"
                                press="onShowCategories"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{path:'NorthwindModel>/Categories', length: 3}"
                            >
                                <CustomListItem>
                                    <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{path:'NorthwindModel>CategoryName'}"
                                            />
                                            <Text
                                                text="{NorthwindModel>Description}"
                                            />
                                        </VBox>
                                        <ObjectStatus
                                            class="sapUiTinyMargin sapUiSmallMarginEnd"
                                            text="{NorthwindModel>CategoryID}"
                                        />
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>

                    <layoutData>
                        <l:SplitterLayoutData
                            size="80%"
                            resizable="false"
                        />
                    </layoutData>
                </Page>
            </l:Splitter>
        </content>
    </Page>
</mvc:View>
