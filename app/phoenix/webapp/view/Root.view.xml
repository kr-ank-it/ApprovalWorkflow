<mvc:View
    controllerName="phoenix.controller.Root"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.f.cards"
>
    <Page
        id="page"
        title="Welcome to Shoplift"
    >
        <content>
            <l:Splitter height="500px">
                <Page title="Explore by">
                    <Panel
                        height="100%"
                        expandable="false"
                        expanded="true"
                        stickyHeader="true"
                        width="auto"
                    >
                        <content>
                            <SelectList
                                itemPress="showContents"
                                items="{
						path: 'oOptionsModel>/'
					}"
                            >
                                <core:Item
                                    key="{oOptionsModel>key}"
                                    text="{oOptionsModel>value}"
                                />
                            </SelectList>
                        </content>
                    </Panel>

                    <layoutData>
                        <l:SplitterLayoutData
                            size="20%"
                            resizable="false"
                        />
                    </layoutData>
                </Page>

                <Page
                title = "Content"
                >
                    <content>
                        <NavContainer id="dynamicContent" />
                    </content>
                    <layoutData>
                        <l:SplitterLayoutData
                            size="80%"
                            resizable="false"
                        />
                    </layoutData>
                </Page>
            </l:Splitter>
        </content>
    </Page>
</mvc:View>
